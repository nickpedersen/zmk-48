#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/rgb.h>

#define AS(keycode) &as LS(keycode) keycode

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <150>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &kp Q           &kp W       &kp E           &kp R           &kp T       &trans                              &trans          &kp Y       &kp U          &kp I           &kp O           &kp P
                &hm LSHIFT A    &kp S       &kp D           &hm LGUI F      &kp G       &trans                              &trans          &kp H       &hm LGUI J     &kp K           &kp L           &hm RSHIFT SEMI
                &kp Z           &kp X       &kp C           &kp V           &kp B       &trans                              &trans          &kp N       &kp M          &kp COMMA       &kp DOT         &kp FSLH
                                &kp BSPC    &kp RET         &trans          &kp SPACE   &mo 1       &trans      &trans      &mo 1           &kp SPACE   &trans         &kp LBKT        &kp RBKT
            >;
        };

        raise {
            bindings = <
                &trans          &trans      &kp UP          &trans          &trans      &trans                              &trans          &trans      &hm AS(N7)     &hm AS(N8)      &hm AS(N9)      &trans
                &trans          &kp LEFT    &kp DOWN        &kp RIGHT       &trans      &trans                              &trans          &trans      &hm AS(N4)     &hm AS(N5)      &hm AS(N6)      &hm AS(N0)
                &trans          &trans      &trans          &trans          &trans      &trans                              &trans          &trans      &hm AS(N1)     &hm AS(N2)      &hm AS(N3)      &kp KP_DOT
                                &trans      &trans          &trans          &trans      &trans      &trans      &trans      &trans          &trans      &trans         &trans          &bootloader
            >;
        };

        lower {
            bindings = <
                &trans          &trans      &trans          &trans          &trans      &trans                              &trans          &trans      &trans         &trans          &trans         &trans
                &trans          &trans      &trans          &trans          &trans      &trans                              &trans          &trans      &trans         &trans          &trans         &trans
                &trans          &trans      &trans          &trans          &trans      &trans                              &trans          &trans      &trans         &trans          &trans         &trans
                                &trans      &trans          &trans          &trans      &trans      &trans      &trans      &trans          &trans      &trans         &trans          &trans
            >;
        };
    };
};